---
setup:
  - connect: "jdbc:embed:/__SYS?schema=CATALOG"
  - query: drop schema template if exists aggregate_index_tests_template_count
  - query: create schema template aggregate_index_tests_template_count
        create table t1(id bigint, col1 bigint, col2 bigint, primary key(id))
        create index mv1 as select count(*) from t1
        create index mv2 as select count(*) from t1 group by col2
        create index mv3 as select count(col1) from t1
        create index mv4 as select count(col1) from t1 group by col2
        create table t2(id bigint, col1 bigint, col2 bigint, col3 bigint, primary key(id))
        create index mv5 as select col2 from t2
  - query: drop database if exists /FRL/AGG_IDX_YAML_COUNT
  - query: create database /FRL/AGG_IDX_YAML_COUNT
  - query: create schema /FRL/AGG_IDX_YAML_COUNT/test with template aggregate_index_tests_template_count
  - connect: "jdbc:embed:/FRL/AGG_IDX_YAML_COUNT?schema=TEST"
  - query: INSERT INTO T1
      VALUES (1, 10, 1),
             (2, null, 2),
             (3, null, 2),
             (4, 12, 2)
---
test_block:
  options:
    mode: randomized
    repetition: 2
  tests:
    -
      - query: select * from t1
      - result: [{ID: 1, 10, 1},
                 {ID: 2, !null , 2},
                 {ID: 3, !null , 2},
                 {ID: 4, 12, 2}]
    -
      - query: select count(*) from t1
      - explainContains: "AggregateIndexScan(Index(MV1 <,> BY_GROUP)"
      - result: [{4}]
    -
      - query: select count(*) from t1 group by col2
      - explainContains: "AggregateIndexScan(Index(MV2 <,> BY_GROUP)"
      - result: [{1}, {3}]
    -
      - query: select count(col1) from t1
      - explainContains: "AggregateIndexScan(Index(MV3 <,> BY_GROUP)"
      - result: [{2}]
    -
      - query: select count(col1) from t1 group by col2
      - explainContains: "AggregateIndexScan(Index(MV4 <,> BY_GROUP)"
      - result: [{1}, {1}]
---
setup:
  - query: INSERT INTO T2
      VALUES (1, 10, 1, 11),
             (2, null, 2, 20),
             (3, null, 2, 20),
             (4, 12, 2, 20)
---
test_block:
  options:
    mode: randomized
    repetition: 2
  tests:
    -
      - query: select * from t2
      - result: [{ID: 1, 10, 1, 11},
                 {ID: 2, !null , 2, 20},
                 {ID: 3, !null , 2, 20},
                 {ID: 4, 12, 2, 20}]
    -
      - query: select count(*) from t2
      - explainContains: "AGGREGATE BY (count_star("
      - result: [{4}]
    -
      - query: select count(*) from t2 group by col2
      - explainContains: "AGGREGATE BY (count_star("
      - result: [{1}, {3}]
    -
      - query: select count(col1) from t2
      - explainContains: "AGGREGATE BY (count("
      - result: [{2}]
    -
      - query: select count(col1) from t2 group by col2
      - explainContains: "AGGREGATE BY (count("
      - result: [{1}, {1}]
---
destruct:
  - connect: "jdbc:embed:/__SYS?schema=CATALOG"
  - query: drop database /FRL/AGG_IDX_YAML_COUNT
  - query: drop schema template aggregate_index_tests_template_count
...
