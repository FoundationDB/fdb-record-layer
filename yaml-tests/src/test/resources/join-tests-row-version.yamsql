---
schema_template:
    create table jua(c1 bigint, c2 bigint, c5 bigint, primary key(c1))
    create table jub(c1 bigint, c3 bigint, c5 bigint, primary key(c1))
    with options (store_row_versions=true)
---
setup:
  steps:
    - query: INSERT INTO jua VALUES(1, 2, 5)
    - query: INSERT INTO jub VALUES(1, 3, 5)
---
test_block:
  tests:
    -
      # dummy test
      - query: select * from jua where c1=2;
      - result: []
  tests:
    -
      # union join on row version
      - query: select * from jua join jub using("__ROW_VERSION");
      - supported_version: !current_version
      - result: []
...
