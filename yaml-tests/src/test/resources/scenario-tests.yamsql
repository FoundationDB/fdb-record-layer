---
setup:
  connect: "jdbc:embed:/__SYS?schema=CATALOG"
  steps:
    - query: DROP SCHEMA TEMPLATE if exists messenger_template;
    - query: CREATE SCHEMA TEMPLATE messenger_template
        CREATE TABLE messages(
               id bigint,
               text string,
               timestamp bigint,
               other_party_id bigint,
               sent boolean,
               primary key(id))
           CREATE TABLE customer(
               id bigint,
               name string,
               phone_number string,
               address string,
               primary key(id));
    - query: drop database if exists /FRL/JOIN_YAML
    - query: create database /FRL/JOIN_YAML
    - query: create schema /FRL/JOIN_YAML/test with template messenger_template
---
test_block:
  connect: "jdbc:embed:/FRL/JOIN_YAML?schema=TEST"
  options:
    mode: randomized
    repetition: 2
    check_cache: true
  tests:
    -
      # the query works now as expected, TODO: add data, verify results.
      - query: select name, sent, text, timestamp from messages m, customer c where m.other_party_id = c.id;
---
destruct:
  connect: "jdbc:embed:/__SYS?schema=CATALOG"
  steps:
    - query: drop database /FRL/JOIN_YAML
    - query: DROP SCHEMA TEMPLATE messenger_template;
...
