# This test should pass as it is self-sufficient - when run independently or included in other file.
# That is, it has a (local) connection for the schema template definition. The following test block does not define
# connection value, hence, should connect to the only local available connection.
---
schema_template:
    create table t2(id bigint, col1 bigint, primary key(id))
---
setup:
  steps:
    - query: INSERT INTO t2 VALUES (10, 20), (30, 40), (50, 60), (70, 80)
---
test_block:
  name: transactions-tests
  tests:
    -
      - query: select * from t2_func
      - setup: create temporary function t2_func() on commit drop function AS
          SELECT * FROM t2;
      - explain: "SCAN(<,>)"
      - result: [
        {id: 10, col1: 20},
        {id: 30, col1: 40},
        {id: 50, col1: 60},
        {id: 70, col1: 80}]
    -
      - query: select * from t2_func
      - setup: create temporary function t2_func() on commit drop function AS
          SELECT * FROM t2 where id < 50;
      - explain: "SCAN(<,>) | FILTER _.ID LESS_THAN promote(@cT2_FUNC18 AS LONG)"
...