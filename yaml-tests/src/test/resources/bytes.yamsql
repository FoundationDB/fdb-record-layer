---
setup:
  connect: "jdbc:embed:/__SYS?schema=CATALOG"
  steps:
    - query: drop schema template if exists bytes_tests_schema_template
    - query: create schema template bytes_tests_schema_template
        create table lb(a bigint, b bytes, primary key(a))
    - query: drop database if exists /FRL/BYTES_YAML
    - query: create database /FRL/BYTES_YAML
    - query: create schema /FRL/BYTES_YAML/BYTES_SCHEMA with template bytes_tests_schema_template
---
setup:
  connect: "jdbc:embed:/FRL/BYTES_YAML?schema=BYTES_SCHEMA"
  steps:
    - query: insert into lb values (1, x'deadbeef'), (2, b64'yv4='), (3, null);
---
test_block:
  connect: "jdbc:embed:/FRL/BYTES_YAML?schema=BYTES_SCHEMA"
  options:
    mode: parallelized
    repetition: 5
    check_cache: true
  tests:
    -
      - query: select b from lb
      - result: [ { x'deadbeef'}, { x'cafe' }, { !null } ]
    -
      - query: select x'0' from lb where a = 1
      - error: 22F03
    -
      - query: select x'ABCDMN' from lb where a = 1
      - error: 22F03
    -
      - query: select b64'***' from lb where a = 1
      - error: 22F03
    -
      - query: select a from lb where b = x'cafe'
      - result: [ { 2 } ]
    -
      - query: select a from lb where b IN (x'cafe', x'deadbeef')
      - unorderedResult: [ { 1 }, { 2 } ]
    -
      - query: select a from lb where b <> x'cafe'
      - unorderedResult: [ { 1 } ]
    -
      - query: select a from lb where b IS NULL
      - unorderedResult: [ { 3 } ]
    -
      - query: select a from lb where b IS NOT NULL
      - unorderedResult: [ { 1 }, { 2 } ]
---
test_block:
  connect: "jdbc:embed:/FRL/BYTES_YAML?schema=BYTES_SCHEMA"
  options:
    mode: parallelized
    repetition: 5
  tests:
    -
      # Complications with retrieving from cache owing to TODO (Preserve the lexical positions of the bindings)
      - query: select x'' from lb where a = 1
      - result: [ {x''} ]
    -
      # Complications with retrieving from cache owing to TODO (Preserve the lexical positions of the bindings)
      - query: select x'0ff1ce' from lb where a = 1
      - result: [ {x'0ff1ce'}]
---
destruct:
  connect: "jdbc:embed:/__SYS?schema=CATALOG"
  steps:
    - query: drop database /FRL/BYTES_YAML
    - query: drop schema template bytes_tests_schema_template
...
